{
    "name": "manueldinis/smoothtranslations",
    "description": "A simple Package that aims to make translations for your web apps an easier task",
    "type": "composer-plugin",
    "extra": {
        "class": "Manueldinis\\Smoothtranslations\\Translator",
        "my-plugin-config": {
            "dbConfig": {
                "host": "localhost",
                "database": "mydb",
                "username": "myuser",
                "password": "mypassword"
            }
        }
    },
    "prefer-stable": true,
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Manueldinis\\Smoothtranslations\\": "src/"
        }
    },
    "authors": [
        {
            "name": "ManuelDinis",
            "email": "4228@feppv.pt"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "composer-plugin-api": "^2.0"
    },    
    "require-dev": {}
}
